{
  "env": {
    "es2021": true,
    "node": true,
    "mocha": true
  },
  "plugins": ["mocha"],
  "extends": ["eslint:recommended", "plugin:mocha/recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "off",
    "no-console": "off"
  }
}
